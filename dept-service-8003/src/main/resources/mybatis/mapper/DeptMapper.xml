<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yitong.domain.repository.DeptRepository">

    <resultMap id="deptMap" type="Dept">
        <id property="dcode" column="DCODE" jdbcType="INTEGER"></id>
        <result property="deptName" column="DEPTNAME" jdbcType="VARCHAR"></result>
        <result property="mark" column="MARK" jdbcType="VARCHAR"></result>
    </resultMap>

    <sql id="where_sql">
      <if test="dcode != null">
          and DCODE = #{dcode, jdbcType=INTEGER}
      </if>
      <if test="deptName != null">
          and DEPTNAME = #{deptName, jdbcType=VARCHAR}
      </if>
      <if test="mark != null">
          and MARK = #{mark, jdbcType=VARCHAR}
      </if>
    </sql>

    <insert id="create" parameterType="Dept">
        insert into dept
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="dcode != null">
                DCODE,
            </if>
            <if test="deptName != null">
                DEPTNAME,
            </if>
            <if test="mark != null">
                MARK,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="dcode != null">
                #{dcode, jdbcType=INTEGER},
            </if>
            <if test="deptName != null">
                #{deptName, jdbcType=VARCHAR},
            </if>
            <if test="mark != null">
                #{mark, jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <select id="read" resultMap="deptMap" parameterType="Dept">
        select DCODE, DEPTNAME, MARK from dept
        <where>
            <include refid="where_sql"/>
        </where>
    </select>

    <select id="getDept" resultMap="deptMap" parameterType="Integer">
        select DCODE, DEPTNAME, MARK from dept where DCODE = #{dcode, jdbcType=INTEGER}
    </select>

    <update id="update" parameterType="Dept">
        update dept
        <trim prefix="set " suffix="" suffixOverrides=",">
            <if test="deptName != null">
                DEPTNAME = #{deptName, jdbcType=VARCHAR},
            </if>
            <if test="mark != null">
                MARK = #{mark, jdbcType=VARCHAR},
            </if>
        </trim>
        where DCODE = #{dcode, jdbcType=INTEGER}
    </update>

    <delete id="delete" parameterType="Dept">
        delete from dept where DCODE = #{dcode, jdbcType=INTEGER}
    </delete>
</mapper>